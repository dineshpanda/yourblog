<% if @article.errors.any? %>
  <% @article.errors.full_messages.each do |message| %>
    <div class="alert">
      <%= message %>
    </div>
  <% end %>
<% end %>

<h1>
  Edit article #<%= @article.id %>
</h1>

<hr>

<form action="/update_article/<%= @article.id %>" method="post">

  <div class="form-group">
    <label for="title">
      Title
    </label>

    <input type="text" id="title" name="title" class="form-control" value="<%= @article.title %>">
  </div>

  <div class="form-group">
    <label for="content">
      Content
    </label>

    <textarea id="content" name="content" class="form-control" rows="3"><%= @article.content %></textarea>
  </div>

  <div class="form-group">
    <label for="status">
      Status
    </label>

    <input type="text" id="status" name="status" class="form-control" value="<%= @article.status %>">
  </div>

  <div class="form-group">
    <label for="loc">
      Loc
    </label>

    <input type="text" id="loc" name="loc" class="form-control" value="<%= @article.loc %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Update article
  </button>
</form>

<hr>

<a href="/articles">
  Go back
</a>
