<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All articles
    </h1>

    <a href="/articles/new" class="btn btn-block btn-outline-secondary">
      Add a new article
    </a>
  </div>
</div>

<!-- Ransack Code start -->
<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "article_templates/articles_search_form" %>
  </div>
</div>
<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @articles.each do |article| %>
      <tr>
        <!-- Display article.id start -->
        <td>
          <%= article.id %>
        </td>
        <!-- Display article.id end -->

        <!-- Display article.created_at start -->
        <td>
          <%= time_ago_in_words(article.created_at) %> ago
        </td>
        <!-- Display article.created_at end -->

        <!-- Display article.updated_at start -->
        <td>
          <%= time_ago_in_words(article.updated_at) %> ago
        </td>
        <!-- Display article.updated_at end -->

        <td>
          <a href="/articles/<%= article.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @articles, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
