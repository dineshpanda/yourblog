<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All articles
    </h1>

    <a href="/articles/new" class="btn btn-block btn-outline-secondary">
      Add a new article
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "article_templates/articles_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          User
        </th>

        <th>
          Title
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @articles.each do |article| %>
      <tr>
        <td>
          <%= article.id %>
        </td>

        <td>
          <% if article.user.present? %>
            <a href="/users/<%= article.user.id %>">
              <%= article.user.first_name %>
            </a>
          <% end %>
        </td>

        <td>
          <%= article.title %>
        </td>

        <td>
          <%= time_ago_in_words(article.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(article.updated_at) %> ago
        </td>

        <td>
          <a href="/articles/<%= article.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @articles, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
