<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Comments

    <a data-toggle="collapse" href="#article_comments_new_form">
      Add comment
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @article.comments.each do |comment| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <a href="/comments/<%= comment.id %>">
          <%= comment.valid %>
        </a>

        <a href="/delete_comment_from_article/<%= comment.id %>">
          Delete
        </a>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="article_comments_new_form">
        <%= render partial: "article_templates/article_comments_new_form" %>
      </div>
    </div>

  </ul>
</div>
