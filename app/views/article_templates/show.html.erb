<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Article #<%= @article.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/articles" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/articles/<%= @article.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit article
        </a>
      </div>

      <div class="col">
        <a href="/delete_article/<%= @article.id %>" class="btn btn-block btn-outline-secondary">
          Delete article
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Title
      </dt>
      <dd>
        <%= @article.title %>
      </dd>

      <dt>
        Content
      </dt>
      <dd>
        <%= @article.content %>
      </dd>

      <dt>
        Published
      </dt>
      <dd>
        <%= @article.published %>
      </dd>

      <dt>
        Rating
      </dt>
      <dd>
        <%= @article.rating %>
      </dd>

      <dt>
        Publish date
      </dt>
      <dd>
        <%= @article.publish_date %>
      </dd>

      <dt>
        Publish time
      </dt>
      <dd>
        <%= @article.publish_time %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@article.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@article.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <%= render partial: "article_templates/article_comments" %>
  </div>
</div>
