<% if @article.present? %>
  <% if @article.errors.any? %>
    <% @article.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new article
</h1>


<hr>

<form action="/create_article" method="post">

  <div class="form-group">
    <label for="user_id">
      User
    </label>

    <%= select_tag(:user_id, options_from_collection_for_select(User.all, :id, :first_name, @article.user_id), :class => "form-control") %>
  </div>

  <div class="form-group">
    <label for="title">
      Title
    </label>

    <input type="text" id="title" name="title" class="form-control" value="<%= @article.title %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create article
  </button>
</form>

<hr>

<a href="/articles">
  Go back
</a>
