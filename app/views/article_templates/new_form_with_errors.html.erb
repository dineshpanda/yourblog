<% if @article.present? %>
  <% if @article.errors.any? %>
    <% @article.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new article
</h1>


<hr>

<form action="/create_article" method="post">

  <div class="form-group">
    <label for="title">
      Title
    </label>

    <input type="text" id="title" name="title" class="form-control" value="<%= @article.title %>">
  </div>

  <div class="form-group">
    <label for="subtitle">
      Subtitle
    </label>

    <input type="text" id="subtitle" name="subtitle" class="form-control" value="<%= @article.subtitle %>">
  </div>

  <div class="form-group">
    <label for="content">
      Content
    </label>

    <textarea id="content" name="content" class="form-control" rows="3"><%= @article.content %></textarea>
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create article
  </button>
</form>

<hr>

<a href="/articles">
  Go back
</a>
