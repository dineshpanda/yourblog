<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Articles

    <a data-toggle="collapse" href="#user_articles_new_form">
      Add article
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @user.articles.each do |article| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <a href="/articles/<%= article.id %>">
          <%= article.created_at %>
        </a>

        <a href="/delete_article_from_user/<%= article.id %>">
          Delete
        </a>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="user_articles_new_form">
        <%= render partial: "user_templates/user_articles_new_form" %>
      </div>
    </div>

  </ul>
</div>
