<%= search_form_for @q, :class => collapse_search_form, :id => "comments_filters" do |f| %>
  <p class="lead">Narrow results:</p>

  <div class="form-group">
    <%= f.label :valid_eq, "Valid" %>
    <div>
      <label class="radio-inline">
        <%= f.radio_button :valid_eq, "1", checked: ((params[:q] && params[:q][:valid_eq]) == "1" ? "checked" : "") %> Yes
      </label>
      <label class="radio-inline">
        <%= f.radio_button :valid_eq, "0", checked: ((params[:q] && params[:q][:valid_eq]) == "0" ? "checked" : "")%> No
      </label>
      <label class="radio-inline">
        <%= f.radio_button :valid_eq, ""%> Either
      </label>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :auto_removal_time, "Auto removal time" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='auto_removal_timegteqPicker' data-target-input="nearest">
          <%= f.text_field :auto_removal_time_gteq, :class => "form-control datetimepicker-input", :placeholder => "Auto removal time greater than or equal to", :data => {:target => '#auto_removal_timegteqPicker'} %>
          <div class="input-group-append" data-target='#auto_removal_timegteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-clock-o"></i></div>
          </div>
          <script type="text/javascript">
            $(function () {
                $('#auto_removal_timegteqPicker').datetimepicker({
                  format: 'LT'
                });
            });
          </script>
        </div>
      </div>
      <div class='col-md-6'>
        <div class='input-group date' id='auto_removal_timelteqPicker' data-target-input="nearest">
          <%= f.text_field :auto_removal_time_lteq, :class => "form-control datetimepicker-input", :placeholder => "Auto removal time less than or equal to", :data => {:target => '#auto_removal_timelteqPicker'} %>
          <div class="input-group-append" data-target='#auto_removal_timelteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-clock-o"></i></div>
          </div>
          <script type="text/javascript">
            $(function () {
                $('#auto_removal_timelteqPicker').datetimepicker({
                  format: 'LT'
                });
            });
          </script>
        </div>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :auto_removal_date, "Auto removal date" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='auto_removal_dategteqPicker' data-target-input="nearest">
          <%= f.text_field :auto_removal_date_gteq, :class => "form-control datetimepicker-input", :placeholder => "Auto removal date greater than or equal to", :data => {:target => '#auto_removal_dategteqPicker'} %>
          <div class="input-group-append" data-target='#auto_removal_dategteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='auto_removal_datelteqPicker' data-target-input="nearest">
          <%= f.text_field :auto_removal_date_lteq, :class => "form-control datetimepicker-input", :placeholder => "Auto removal date less than or equal to", :data => {:target => '#auto_removal_datelteqPicker'} %>
          <div class="input-group-append" data-target='#auto_removal_datelteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#auto_removal_dategteqPicker').datetimepicker({
              format: 'MM/DD/YYYY'
          });
          $('#auto_removal_datelteqPicker').datetimepicker({
              useCurrent: false,
              format: 'MM/DD/YYYY'
          });
          $('#auto_removal_dategteqPicker').on("dp.change", function (e) {
              $('#auto_removal_datelteqPicker').data("DateTimePicker").minDate(e.date);
          });
          $('#auto_removal_datelteqPicker').on("dp.change", function (e) {
              $('#auto_removal_dategteqPicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>

  <div class="form-group">
    <%= f.label :created_at, "Created at" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='created_atgteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_gteq, :class => "form-control datetimepicker-input", :placeholder => "Created at greater than or equal to", :data => {:target => '#created_atgteqPicker'} %>
          <div class="input-group-append" data-target='#created_atgteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='created_atlteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_lteq, :class => "form-control datetimepicker-input", :placeholder => "Created at less than or equal to", :data => {:target => '#created_atlteqPicker'} %>
          <div class="input-group-append" data-target='#created_atlteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#created_atgteqPicker').datetimepicker({
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atlteqPicker').datetimepicker({
              useCurrent: false,
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atgteqPicker').on("dp.change", function (e) {
              $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
          });
          $('#created_atlteqPicker').on("dp.change", function (e) {
              $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>


  <div class="form-group">
    <%= f.label :article_title_cont, "Article title contains" %>
    <%= f.text_field :article_title_cont, :class => "form-control", :placeholder => "Article title contains" %>
  </div>


  <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

  <a href="/comments" class="btn btn-outline-secondary btn-block mb-1">Clear filters</a>

<% end %>

<a class="btn btn-outline-secondary btn-block mb-1" data-toggle="collapse" href="#comments_filters">
  Show filters
</a>
