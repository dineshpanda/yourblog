<% if @comment.errors.any? %>
  <% @comment.errors.full_messages.each do |message| %>
    <div class="alert">
      <%= message %>
    </div>
  <% end %>
<% end %>

<h1>
  Edit comment #<%= @comment.id %>
</h1>

<hr>

<form action="/update_comment/<%= @comment.id %>" method="post">

  <div class="form-group">
    <label for="article_id">
      Article
    </label>

    <input type="text" id="article_id" name="article_id" class="form-control" value="<%= @comment.article_id %>">
  </div>

  <div class="form-group">
    <label for="desc">
      Desc
    </label>

    <input type="text" id="desc" name="desc" class="form-control" value="<%= @comment.desc %>">
  </div>

  <div class="form-group">
    <label for="price">
      Price
    </label>

    <input type="text" id="price" name="price" class="form-control" value="<%= @comment.price %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Update comment
  </button>
</form>

<hr>

<a href="/comments">
  Go back
</a>
