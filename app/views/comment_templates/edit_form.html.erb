<h1>
  Edit comment #<%= @comment.id %>
</h1>

<hr>

<form action="/update_comment/<%= @comment.id %>" method="post">

  <div class="form-check">
    <input type="hidden" value="0" name="valid">
    <input id="valid" class="form-check-input" name="valid" type="checkbox" value="1" <%= "checked" if @comment.valid %>>
    <label for="valid" class="form-check-label">
      Valid
    </label>
  </div>

  <div class="form-group">
    <label for="auto_removal_date">
      Auto removal date
    </label>

    <input type="text" id="auto_removal_date" name="auto_removal_date" class="form-control" value="<%= @comment.auto_removal_date %>">
  </div>

  <div class="form-group">
    <label for="auto_removal_time">
      Auto removal time
    </label>

    <input type="text" id="auto_removal_time" name="auto_removal_time" class="form-control" value="<%= @comment.auto_removal_time %>">
  </div>

  <div class="form-group">
    <label for="article_id">
      Article
    </label>

    <%= select_tag(:article_id, options_from_collection_for_select(Article.all, :id, :title, @comment.article_id), :class => "form-control") %>
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Update comment
  </button>
</form>

<hr>

<a href="/comments">
  Go back
</a>
