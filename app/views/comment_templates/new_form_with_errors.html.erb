<% if @comment.present? %>
  <% if @comment.errors.any? %>
    <% @comment.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new comment
</h1>


<hr>

<form action="/create_comment" method="post">

  <div class="form-check">
    <input type="hidden" value="0" name="valid">
    <input id="valid" class="form-check-input" name="valid" type="checkbox" <%= "checked" if @comment.valid %>>
    <label for="valid" class="form-check-label">
      Valid
    </label>
  </div>

  <div class="form-group">
    <label for="auto_removal_date">
      Auto removal date
    </label>

    <input type="text" id="auto_removal_date" name="auto_removal_date" class="form-control" value="<%= @comment.auto_removal_date %>">
  </div>

  <div class="form-group">
    <label for="auto_removal_time">
      Auto removal time
    </label>

    <input type="text" id="auto_removal_time" name="auto_removal_time" class="form-control" value="<%= @comment.auto_removal_time %>">
  </div>

  <div class="form-group">
    <label for="article_id">
      Article
    </label>

    <%= select_tag(:article_id, options_from_collection_for_select(Article.all, :id, :title, @comment.article_id), :class => "form-control") %>
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create comment
  </button>
</form>

<hr>

<a href="/comments">
  Go back
</a>
