<% if @comment.present? %>
  <% if @comment.errors.any? %>
    <% @comment.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new comment
</h1>


<hr>

<form action="/create_comment" method="post">

  <div class="form-group">
    <label for="article_id">
      Article
    </label>

    <input type="text" id="article_id" name="article_id" class="form-control" value="<%= @comment.article_id %>">
  </div>

  <div class="form-group">
    <label for="desc">
      Desc
    </label>

    <input type="text" id="desc" name="desc" class="form-control" value="<%= @comment.desc %>">
  </div>

  <div class="form-group">
    <label for="price">
      Price
    </label>

    <input type="text" id="price" name="price" class="form-control" value="<%= @comment.price %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create comment
  </button>
</form>

<hr>

<a href="/comments">
  Go back
</a>
